{
  "name": "salesforce-app",
  "private": true,
  "version": "1.0.0",
  "description": "Salesforce App",
  "scripts": {
    "lint": "eslint \"force-app/main/default/lwc/**/*.js\" \"**/*.test.js\" \"jest.config.js\" --no-error-on-unmatched-pattern",
    "test": "npm run test:unit",
    "test:unit": "sfdx-lwc-jest",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:coverage": "sfdx-lwc-jest --coverage",
    "postinstall": "husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@babel/core": "7.25",
    "@babel/eslint-parser": "7.28.0",
    "@lwc/engine-server": "8.21.6",
    "@lwc/eslint-plugin-lwc": "2.0.0",
    "@salesforce/eslint-config-lwc": "3.7.2",
    "@salesforce/eslint-plugin-lightning": "^1.0.1",
    "@salesforce/sfdx-lwc-jest": "^5.1.0",
    "eslint": "8.57.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.9.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "prettier": "^3.3.3",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "force-app/main/default/lwc/**/*.{js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@salesforce/eslint-config-lwc/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/**/*.js",
          "**/*.test.js"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "jest.config.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  },
  "dependencies": {
    "delay": "^6.0.0"
  }
}
